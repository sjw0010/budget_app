<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>   
   <div class="span8">
      <% if @budget.nil? %>
        <%= link_to "Start Budget!", new_budget_path,
                                class: "btn btn-large btn-primary" %>
      <% else %>
        <%= render partial: "shared/budget_info", locals: { budget: @budget } %>
      <% end %>
    </div> 
  </div> 
<% else %>
  <div class="center hero-unit">
    <h3>Welcome</h3>

    <h2>
      This is the home page for the budget app.
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %>